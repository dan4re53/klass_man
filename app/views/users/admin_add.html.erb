<% provide(:title, 'New Student') %>
<h1>New Student</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for @user, url: createstudent_path, method: :post do |f| %>
			<%= render 'shared/error_messages' %>
			
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :phone, "Phone Number" %>
			<%= f.number_field :phone %>
			
			<%= f.label :grade %>
			<%= f.select( "grade", (9..12), {prompt: "Select Grade"}) %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
		
			<%= f.submit "Create account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>